{
  "name": "manga-scraper",
  "version": "2.7.0",
  "description": "An API to scrape manga data from scanlation's website.",
  "author": "tigaron",
  "private": true,
  "scripts": {
    "start": "NODE_ENV=production npm-run-all build deploy:prod",
    "build": "npm-run-all clean transpile",
    "deploy:dev": "serverless deploy --stage development --verbose",
    "deploy:prod": "serverless deploy --stage production --verbose",
    "fun:dev": "serverless deploy function --function scraper --stage development --verbose",
    "offline": "serverless offline start",
    "local": "serverless invoke local --function scraper --path data.json",
    "dev": "NODE_ENV=development npm-run-all build offline",
    "server": "node ./dist-server/bin/www",
    "transpile": "babel ./server --out-dir dist-server",
    "clean": "rimraf dist-server",
    "watch:dev": "nodemon",
    "test": "jest --testPathPattern=/server/controllers"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.145.0",
    "@aws-sdk/lib-dynamodb": "^3.145.0",
    "@aws-sdk/util-dynamodb": "^3.145.0",
    "cheerio": "^1.0.0-rc.12",
    "express": "^4.18.1",
    "morgan": "^1.10.0",
    "puppeteer-core": "^15.5.0",
    "serverless-http": "^3.0.1",
    "uuid": "^8.3.2",
    "winston": "^3.8.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "@jest-mock/express": "^2.0.1",
    "@sparticuz/chrome-aws-lambda": "^15.5.0",
    "debug": "^4.3.4",
    "jest": "^28.1.3",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "puppeteer": "^15.5.0",
    "rimraf": "^3.0.2",
    "serverless": "^3.21.0",
    "serverless-dynamodb-local": "^0.2.40",
    "serverless-offline": "^9.1.7",
    "supertest": "^6.2.4"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/__test__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
